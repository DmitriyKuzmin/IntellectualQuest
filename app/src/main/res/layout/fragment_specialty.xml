<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SpecialtyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/specialty_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <TextView
                android:id="@+id/name_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/close_specialty"
                android:text="Name specialtyq qw qw qwf qw qw "
                android:textSize="12pt" />

            <ImageButton
                android:id="@+id/close_specialty"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <TextView
            android:id="@+id/desc_specialty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="qwfq fqw qwfq wfq wfqwf qwfqw fq fq fqw fqw fq fq fqw fqw fqw fqw qwf"
            android:layout_below="@id/specialty_bar"
            android:layout_margin="25dp"/>

    </RelativeLayout>

</FrameLayout>